<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/sqlite_title_text"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/purple_500"/>

        <Button
            android:id="@+id/addSQLiteDummyDataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_dummy_data_in_database"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            />

        <Button
            android:id="@+id/sqliteDemoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sqlite_demo_btn_text"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/androidx_room_title_text"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/purple_500"/>

        <Button
            android:id="@+id/addDummyRoomDataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_dummy_data_in_database"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            />

        <Button
            android:id="@+id/roomDemoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/room_demo_btn_text"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            />

    </LinearLayout>

</LinearLayout>